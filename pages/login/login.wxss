.login {
	display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    box-sizing: border-box;
}
.login-avator {
    width: 64px;
    height: 64px;
    margin-top: 80px;
    border-radius: 50%;
}
.login-form {
	width: 100%;
	margin-top: 20px;
}
.form-item {
	position: relative;
	width: 100%;
	height: 40px;
	line-height: 40px;
	margin-top: 10px;
	border-radius: 4px;
	background-color: #dfdfdf;
}
.form-item-title {
	position: absolute;
	left: 10px;
}
.form-item-input {
	position: absolute;
	right: 10px;
	height: 40px;
	line-height: 40px;
	text-align: right;
}
.submit-info {
	width: 100%;
	margin-top: 10px;
}
.submit-info-btn {
	width: 100%;
	height: 40px;
	line-height: 40px;
	padding: 0 10px;
	box-sizing: border-box;
	font-size: 14px;
	font-weight: bold;
	color: #fff;
	box-shadow: 0 8px 15px 0 rgba(255, 127, 36, .3);
	background-color: #f47920;	
}
.submit {
    background-color: #dfdfdf;
}
.submit-content {
    padding: 0 10px;
    background-color: #fff;
}
.submit-item {
    display: flex;
    height: 40px;
    line-height: 40px;
    border-bottom: 1px solid #dfdfdf;
}
.submit-desc {
    display: block;
    height: 100px;
    border: none;
}
.submit-desc .submit-item-title {
    display: block;
}
.submit-logo {
    display: flex;
    justify-content: space-between;
    height: 200px;
    margin-top: 20px;
    /*line-height: 100px;*/
}
.submit-item-image {
    width: 100%;
    height: 180px;
    background-color: #B3B3B3;
    border-radius: 5px;
}
.submit-item-addIcon {
    height: 180px;
    line-height: 180px;
    vertical-align: middle;
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    color: #f7f7f7;
}
.submit-item .submit-item-title {
    width: 40%;
    min-width: 20%;
}
.submit-item .submit-item-panel {
    width: 60%;
    text-align: right;
    height: 40px;
}
.submit-item .submit-item-textarea {
    display: block;
    height: 60px;
    width: 100%;
    line-height: 20px;
}
.submit-play-list {
    margin-top: 10px;
    background-color: #fff;
    padding: 0 10px;
}
.submit-play-list .submit-play-item {
    height: 80px;
    line-height: 80px;
}
.submit-play-list .submit-play-info {
    width: 14%;
    height: 80px;
    float: left;
}
.submit-play-list .play-item-title {
    display: block;
    line-height: 40px;
    width: 100%;
    text-align: center;
}
.submit-play-list .play-item-scroll {
    float: left;
    width: 86%;
    height: 80px;
    overflow:hidden;
    white-space:nowrap;
}
.submit-play-list .play-item-scroll .scroll-content{
    display: inline-block;
    position: relative;
    height: 80px;
    width: 60px;
    padding-top: 10px;
    box-sizing: border-box;
    text-align: center;
}
.submit-play-list .scroll-item-img {
    display: inline-block;
    position: absolute;
    left: 50%;
    margin-left: -15px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
}
.submit-play-list .scroll-item-name {
    width: 100%;
    text-align: center;
    display: block;
}
.submit-play-button {
    height: 60px;
    padding: 10px 10px;
}
.submit-play-button .button-panel {
    display: flex;
    justify-content: space-between;
}
.submit-play-button .button-panel .button-item {
    width: 25%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    background-color: #f47920;
    color: #fff;
    font-weight: bold;
}
.submit-play-button .button-panel .button-item-submit {
    width: 100%;
}
.submit-play-button .button-panel .button-item-cancel {
    background-color: #fff;
    color: #f47920; 
}
.investigation {
    padding: 0 20px;
    box-sizing: border-box;
}
.invest-title {
    height: 60px;
    line-height: 60px;
    color: #f47920;
    font-size: 20px;
    font-weight: bold;
}
.invest-title-line {
    height: 5px;
    width: 70%;
    line-height: 5px;
    background-color: #f47920;
}
.invest-info {
    width: 100%;
    box-sizing: border-box;
    margin-top: 20px;
    padding-left: 10px;
    border-left: 5px solid #e8e8e8;
    color: #666;
}
.form-item {
    margin: 20px 0;
}
.form-item-single {
    margin-right: 15px;
    color: #f47920;
}
.form-item-title {
    height: 30px;
    line-height: 30px;
    font-size: 16px;
    color: #666;
}
.form-item-radio {
    display: block;
    margin-top: 10px;
}
.form-item-textarea {
    line-height: 20px;
    height: 80px;
    width: 100%;
    box-sizing: border-box;
    padding: 10px;
    margin-top: 10px;
    border: 1px solid #e8e8e8;
    border-radius: 5px;
}
.form-btn {}
.button-item {
    width: 100%;
    height: 40px;
    line-height: 40px;
    margin-bottom: 20px;
    background-color: #f47920;
    border-radius: 5px;
    color: #fff;
    font-weight: bold;
    font-size: 16px;
}